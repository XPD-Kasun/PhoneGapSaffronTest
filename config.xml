<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.phonegap.fbtest" versionCode="10" version="1.0.0">
   <!-- versionCode is optional and Android only -->
   <name>SaffronFbTest</name>
   <description>An example for phonegap build docs.</description>
   <author href="https://build.phonegap.com" email="support@phonegap.com">C3</author>
   <plugin name="cordova-plugin-whitelist" spec="1" />
   <access origin="*" />
   <allow-intent href="http://*/*" />
   <allow-intent href="https://*/*" />
   <allow-intent href="tel:*" />
   <allow-intent href="sms:*" />
   <allow-intent href="mailto:*" />
   <allow-intent href="geo:*" />
   <platform name="android">
      <allow-intent href="market:*" />
   </platform>
   <access origin="*" />
   <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
   <plugin name="cordova-plugin-whitelist" spec="~1.3.2" />
   <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1" />
   <plugin name="ionic-plugin-keyboard" spec="2.2.1" source="npm" />	
   <plugin name="cordova-plugin-statusbar" spec="2.2.3" source="npm" />
   <preference name="Fullscreen" value="false" />
   <preference name="KeyboardDisplayRequiresUserAction" value="false" />
   <preference name="StatusBarOverlaysWebView" value="true" />
   <preference name="StatusBarBackgroundColor" value="#FFC107" />
   <preference name="orientation" value="portrait" />
   <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize"/>
</widget>